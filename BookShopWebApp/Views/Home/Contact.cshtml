@{
	ViewBag.Title = "İletişim";
}

<div class="section section-breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>İletişim</h1>
			</div>
		</div>
	</div>
</div>

<div class="contact-container">

	<div class="contact-info">
		<ul>
			<li><strong>Adres:</strong> Atatürk Caddesi 06000 Çankaya, Ankara, Türkiye</li>
			<li><strong>Telefon:</strong> 0312 000 00 00</li>
			<li><strong>E-posta:</strong> <a href="mailto:goncaburakk@gmail.com">goncaburakk@gmail.com</a></li>
		</ul>
	</div>
	<div class="contact-form">
		<h2>İletişim Formu</h2>
		<form>
			<div class="form-group">
				<label for="name">Adınız</label>
				<input type="text" id="name" name="name" required>
			</div>
			<div class="form-group">
				<label for="email">E-posta</label>
				<input type="email" id="email" name="email" required>
			</div>
			<div class="form-group">
				<label for="message">Mesajınız</label>
				<textarea id="message" name="message" rows="5" required></textarea>
			</div>
			<button type="submit">Gönder</button>
		</form>
	</div>
</div>

<style>
	.contact-container {
		font-family: Arial, sans-serif;
		max-width: 500px;
		margin: 0 auto;
		padding: 5px;
		line-height: 1.6;
		color: #333;
	}

		.contact-container h1 {
			text-align: center;
			color: #373A40;
			margin-bottom: 20px;
		}

	.contact-info {
		margin-bottom: 40px;
	}

		.contact-info h2 {
			color: #373A40;
		}

		

		.contact-info ul {
			list-style: none;
			padding: 0;
		}

		.contact-info li {
			margin-bottom: 10px;
		}

		.contact-info a {
			color: #373A40;
			text-decoration: none;
		}

			.contact-info a:hover {
				text-decoration: underline;
			}

	.contact-form h2 {
		color: #373A40;
		margin-bottom: 8px;
	}

	.form-group {
		margin-bottom: 10px;
	}

		.form-group label {
			display: block;
			margin-bottom: 5px;
			font-weight: bold;
		}

		.form-group input,
		.form-group textarea {
			width: 100%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			font-size: 16px;
		}

		.form-group textarea {
			resize: vertical;
		}

	button[type="submit"] {
		background-color: #373A40;
		color: white;
		border: none;
		padding: 10px 20px;
		font-size: 16px;
		border-radius: 5px;
		cursor: pointer;
	}

		button[type="submit"]:hover {
			background-color: #333;
		}
</style>
