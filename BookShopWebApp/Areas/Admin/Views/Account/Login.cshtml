@{

    Layout = "_LayoutAccount";
}


<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="https://www.linkedin.com/in/burak-gonca" class="h1"><b>Burak</b>Gonca</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Yönetim paneli için giriş yapmalısınız</p>

            @if (ViewBag.FailLogin is not null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-ban"></i> Dikkat!</h5>

                    @ViewBag.FailLogin

                </div>
            }


            <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                <div class="input-group mb-3">
                    <input name="email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input name="password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                   
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            
            
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
