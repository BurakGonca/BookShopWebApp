@model List<BS.Entities.Concrete.AppUser>


<div style="margin-top:40px; margin-left:12px;">

	<h3>Üyeler</h3>

	@if (TempData["Message"] is not null)
	{
		<div class="alert alert-danger"><h5>@TempData["Message"]</h5></div>
	}
</div>


<table class="table table-striped table-hover" style=" margin-left:12px;">
	<thead>
		<tr>
			<th>Kullanıcı ID</th>
			<th>Ad</th>
			<th>Soyad</th>
			<th>E-posta</th>
			<th>Adres</th>
			<th>Cinsiyet</th>
			<th>İşlem</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.Name</td>
				<td>@user.Surname</td>
				<td>@user.Email</td>
				<td>@user.Adress</td>
				<td>@user.Gender</td>
				<td>
					<a class="btn btn-info" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Düzenle</a>
					<a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
