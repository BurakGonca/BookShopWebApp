@model BookViewModel

<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" asp-controller="Book" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="BookName" class="form-control" placeholder="Kitap Adı" />
                    <span asp-validation-for="BookName" class="form-text text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <input asp-for="AuthorName" class="form-control" placeholder="Yazar Adı" />
                        <span asp-validation-for="AuthorName" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <input asp-for="AuthorSurname" class="form-control" placeholder="Yazar Soyadı" />
                        <span asp-validation-for="AuthorSurname" class="form-text text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PublishDate"></label>
                    <input asp-for="PublishDate" type="date" class="form-control" />
                    <span asp-validation-for="PublishDate" class="form-text text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="text" class="form-control" placeholder="Fiyatı" />
                        <span asp-validation-for="Price" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="StockQuantity"></label>
                        <input asp-for="StockQuantity" class="form-control" placeholder="Stoğu" />
                        <span asp-validation-for="StockQuantity" class="form-text text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryList"></select>
                        <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="ImageFile"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="form-text text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <button type="submit" class="btn btn-primary btn-block">DÜZENLE</button>
                    </div>
                </div>

                <input type="hidden" name="ExistingImageName" value="@ViewBag.PicName" />
            </form>
        </div>

        <div class="col-md-4">
            @if (ViewBag.PicName != null)
            {
                <img src="~/images/@ViewBag.PicName" alt="Current Image" style="width: 310px; height: auto;" class="img-fluid" />
            }
            else
            {
                <img src="~/dist/img/1.png" alt="Sample Image" style="width: 310px; height: auto;" class="img-fluid" />
            }
        </div>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
