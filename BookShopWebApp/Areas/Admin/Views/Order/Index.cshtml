@model List<OrderViewModel>

@if (TempData["Message"] is not null)
{
	<div class="alert alert-success" role="alert" style="text-align: center;">
		@TempData["Message"]
	</div>
}

<table class="table table-striped table-hover" style=" margin-left:12px;">
	<thead>
		<tr>
			<th>Sıra No</th>
			
			<th>Sipariş Tarihi</th>
			<th>Toplam Fiyat</th>
			<th>Sipariş İptali</th>
		</tr>
	</thead>
	<tbody>
		@{
			int rowNumber = 1;

		}
		@foreach (var item in Model)
		{
			<tr>
				<td>@rowNumber</td>
				
				<td>@item.OrderDate.ToShortDateString()</td>
				<td>@item.TotalPrice TL</td>
				<td>
					<a asp-area="Admin" asp-asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id">İptal Et <i class="bi bi-x-circle-fill"></i></a>
				</td>

			</tr>
			rowNumber++;

		}
	</tbody>
</table>