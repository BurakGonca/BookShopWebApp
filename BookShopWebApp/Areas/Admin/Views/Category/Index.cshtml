@model List<CategoryViewModel>



<table class="table table-striped table-hover" style="margin-top:15px; margin-left:12px;">
	<tr>
		<td>#</td>
		<td>Kategori Adı</td>
		<td>Kitap Sayısı</td>
		<td>İşlem</td>


	</tr>
	@{
		foreach (var item in Model)
		{
			<tr>
				<td>@item.RowNum</td>
				<td>@item.CategoryName</td>
				<td>@item.Books.Count()</td>
				
				<td>
					<a class="btn btn-info" asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
					<a class="btn btn-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
				</td>

			</tr>
		}
	}


</table>